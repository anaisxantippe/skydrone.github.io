{% extends 'base.html.twig' %}

{% block title %}Nouvel Utilisateur{% endblock %}

{% block body %}
    <h1>Création d'un nouvel utilisateur </h1>

    {{ form_start(form)}}

    {{ form_row(form.username, {'label' : 'Nom d\'utilisateur','attr': {'placeholder' : "Identifiant de l'utisateur"}}) }}
    {{ form_row(form.pass, {'label' : 'Mot de passe','attr': {'placeholder' : "Mot de passe"}}) }}
    {{ form_row(form.role, {'label': 'Role','attr': {'placeholder' : "Rôle de l'utilisateur"}}) }}
    {{ form_row(form.mail, {'label':'Adresse mail','attr': {'placeholder' : "Email de l'utilisateur"}}) }}
    <button type="submit" class="btn btn-success">Ajouter un nouvel utilisateur</button>
    {{ form_end(form)}}
    <a href="{{ path('users_index') }}">Retour à la liste</a>
{% endblock %}
