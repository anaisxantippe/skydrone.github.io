{% extends 'base.html.twig' %}

{% block title %}Users index{% endblock %}

{% block body %}
    <h1>Users index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>UserId</th>
                <th>Role</th>
                <th>Pass</th>
                <th>Username</th>
                <th>Mail</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.userId }}</td>
                <td>{{ user.role }}</td>
                <td>{{ user.password}}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.mail }}</td>
                <td>
                    <a href="{{ path('users_show', {'userId': user.userId}) }}">show</a>
                    <a href="{{ path('users_edit', {'userId': user.userId}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('users_new') }}">Create new</a>
{% endblock %}
