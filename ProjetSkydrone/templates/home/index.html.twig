{% block title %}SkyDrone{% endblock %}

{% block body %}
    <style>
        body {
            background: linear-gradient(180deg, #612070 0%, #938FF3 56.25%, #0B114A 100%);
            color: #f1f2f3;
            font-family: 'IBM Plex Mono', monospace;
        }
        .carousel-item, .module {
            background: linear-gradient(180deg, #FF4093 0%, rgba(232, 79, 146, 0) 100%);
            border: 2px solid #FFFFFF;
            box-sizing: border-box;
            border-radius: 30px;
            color: #f1f2f3;
            position: relative;
        }
        li{
