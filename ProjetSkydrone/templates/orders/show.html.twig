{% extends 'base.html.twig' %}

{% block title %}Orders{% endblock %}

{% block body %}
    <h1>Orders</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>OrderId</th>
                <td>{{ order.orderId }}</td>
            </tr>
            <tr>
                <th>OrderDate</th>
                <td>{{ order.orderDate ? order.orderDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DelayedPayment</th>
                <td>{{ order.delayedPayment ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>DfTotal</th>
                <td>{{ order.dfTotal }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ order.quantity }}</td>
            </tr>
            <tr>
                <th>Payed</th>
                <td>{{ order.payed ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Discount</th>
                <td>{{ order.discount }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ order.total }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('orders_index') }}">back to list</a>

    <a href="{{ path('orders_edit', {'orderId': order.orderId}) }}">edit</a>

    {{ include('orders/_delete_form.html.twig') }}
{% endblock %}
