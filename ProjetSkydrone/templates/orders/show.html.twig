{% extends 'base.html.twig' %}

{% block title %}Commande {% endblock %}

{% block body %}
    <h1>Commande </h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Identifiant de la commande </th>
                <td>{{ order.orderId }}</td>
            </tr>
            <tr>
                <th>Date de la commande</th>
                <td>{{ order.orderDate ? order.orderDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Paiement en différé? </th>
                <td>{{ order.delayedPayment ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Total Hors-Taxe </th>
                <td>{{ order.dfTotal }}</td>
            </tr>
            <tr>
                <th>Quantité</th>
                <td>{{ order.quantity }}</td>
            </tr>
            <tr>
                <th>Payé? </th>
                <td>{{ order.payed ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Remise</th>
                <td>{{ order.discount }}</td>
            </tr>
            <tr>
                <th>Total Toutes Taxes</th>
                <td>{{ order.total }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('orders_index') }}">Retour à la liste</a>

    <a href="{{ path('orders_edit', {'orderId': order.orderId}) }}">Modifier</a>

    {{ include('orders/_delete_form.html.twig') }}
{% endblock %}
