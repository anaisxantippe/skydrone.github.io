{% extends 'base.html.twig' %}

{% block title %}Hello CatalogController!{% endblock %}

{% block body %}
    <table class="table">

        <thead>
        <tr>
            <th scope="col">ID du produit</th>
            <th scope="col">Nom</th>
            <th scope="col">Description</th>
            <th scope="col">Prix HT</th>
            <th scope="col">Photo</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
        <tr>
            <th scope="row"><a href="{{ path('product_details',{'id': product.productId}) }}">{{ product.productId }}</a></th>
            <td>{{ product.productName() }}</td>
            <td>{{ product.description }}</td>
            <td>{{ product.dfPrice }}</td>
            <td><img src="{{ asset('public/uploads/products/' ~ product.picture) }}" alt="Photo du produit {{ product.productId }}"/></td>

        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
