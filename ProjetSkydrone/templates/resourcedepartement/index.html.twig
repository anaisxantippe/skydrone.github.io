{% extends 'base.html.twig' %}

{% block title %}ResourceDepartment index{% endblock %}

{% block body %}
    <h1>ResourceDepartment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>RdId</th>
                <th>Lastname</th>
                <th>Firstname</th>
                <th>Adress</th>
                <th>ZipCode</th>
                <th>City</th>
                <th>Birthdate</th>
                <th>PhoneNumber</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for resource_department in resource_departments %}
            <tr>
                <td>{{ resource_department.rdId }}</td>
                <td>{{ resource_department.lastname }}</td>
                <td>{{ resource_department.firstname }}</td>
                <td>{{ resource_department.adress }}</td>
                <td>{{ resource_department.zipCode }}</td>
                <td>{{ resource_department.city }}</td>
                <td>{{ resource_department.birthdate ? resource_department.birthdate|date('Y-m-d') : '' }}</td>
                <td>{{ resource_department.phoneNumber }}</td>
                <td>
                    <a href="{{ path('resourcedepartement_show', {'rdId': resource_department.rdId}) }}">show</a>
                    <a href="{{ path('resourcedepartement_edit', {'rdId': resource_department.rdId}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('resourcedepartement_new') }}">Create new</a>
{% endblock %}
